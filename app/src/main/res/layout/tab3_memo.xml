<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <Spinner
        android:id="@+id/memo_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/spinner_background"
        android:layout_alignParentRight="true" ></Spinner>

    <TextView
        android:layout_width="344dp"
        android:layout_height="117dp"
        android:layout_below="@id/memo_spinner"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="에어비앤비[여행]\n\n아이디 : air123 \n\n 비밀번호 : airair \n\n 숙박 예매 사이트"
        android:background="#FFEFEF" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/memo_spinner"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:text="추가"
        android:background="#f36d63"
        android:textColor="#ffffff"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/memo_spinner"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@id/button1"
        android:layout_weight="1"
        android:text="수정/삭제"
        android:background="#f36d63"
        android:textColor="#ffffff"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"/>

</RelativeLayout>