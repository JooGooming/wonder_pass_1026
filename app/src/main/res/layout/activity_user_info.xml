<?xml version="1.0" encoding="utf-8"?>

<!--마이페이지 > 회원정보 확인-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    tools:context=".UserInfoActivity">


    <!--TOOL Bar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
    </androidx.appcompat.widget.Toolbar>


    출처: https://hyesunzzang.tistory.com/44 [HYESUN.IO]

    <ImageView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/usericon"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:text="wonderpass"
        android:textColor="@color/black"
        android:textSize="16sp">
    </TextView>


    <!--사용자 정보-->
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="#dcdcdc"
        android:stretchColumns="*"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:text="사용자 정보"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorMyPage"
            android:textColor="@color/black"
            >
        </TextView>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:text="전진범"
                android:textColor="#999999"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="아이디"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:text="wonderpass123"
                android:textColor="@color/black"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:text="****************"
                android:textColor="#999999"/>
        </TableRow>

    </TableLayout>

    <!--연락처-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="#dcdcdc"
        android:stretchColumns="*"
        >
        <TextView
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:text="연락처"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorMyPage"
            android:textColor="@color/black">
        </TextView>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:text="wonder5@naver.com"
                android:textColor="#999999"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="휴대전화"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:text="010-1234-5678"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_usermodi"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="수정하기"
        android:textSize="24dp"
        android:background="@drawable/btn_coral"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="입력한 내용으로 회원 정보를 업데이트 합니다."
        android:textSize="16sp"
        android:layout_marginTop="12dp">
    </TextView>







</LinearLayout>